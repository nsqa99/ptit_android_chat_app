<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvtFr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivOn"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#37F602"
        android:visibility="gone"
        app:civ_border_width="10dp"
        app:layout_constraintStart_toStartOf="@+id/ivAvtFr"
        app:layout_constraintTop_toTopOf="@+id/ivAvtFr" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivOff"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#7F807F"
        android:visibility="gone"
        app:civ_border_width="10dp"
        app:layout_constraintStart_toStartOf="@+id/ivAvtFr"
        app:layout_constraintTop_toTopOf="@+id/ivAvtFr" />

    <TextView
        android:id="@+id/tvDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyen Sy Quang Anh"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvtFr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toEndOf="@+id/ivAvtFr"
        app:layout_constraintTop_toTopOf="@+id/ivAvtFr"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/tvLastMsg"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvtFr"
        app:layout_constraintStart_toStartOf="@+id/tvDisplayName"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayName" />


</androidx.constraintlayout.widget.ConstraintLayout>